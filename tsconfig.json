{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2017",
        "noImplicitAny": true,
        "removeComments": true, 
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "rootDir": "src",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "bin"
    ]
}